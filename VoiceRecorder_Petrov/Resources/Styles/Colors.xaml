<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Уникальная цветовая палитра для диктофона -->
    
    <!-- Основные цвета - темная тема с градиентами -->
    <Color x:Key="Primary">#667EEA</Color>
    <Color x:Key="PrimaryDark">#5568D3</Color>
    <Color x:Key="PrimaryLight">#7B8CDE</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    
    <!-- Акцентные цвета - фиолетовый и розовый -->
    <Color x:Key="Secondary">#764BA2</Color>
    <Color x:Key="SecondaryDark">#5D3A82</Color>
    <Color x:Key="SecondaryDarkText">#1E5631</Color>
    <Color x:Key="Tertiary">#FF6B6B</Color>
    <Color x:Key="TertiaryDark">#EE5A6F</Color>
    <Color x:Key="TertiaryAccent">#F093FB</Color>

    <!-- Базовые цвета -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- Градации серого для темной темы -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#E8E8E8</Color>
    <Color x:Key="Gray300">#BDBDBD</Color>
    <Color x:Key="Gray400">#9E9E9E</Color>
    <Color x:Key="Gray500">#757575</Color>
    <Color x:Key="Gray600">#616161</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Фоновые цвета - темная тема -->
    <Color x:Key="BackgroundDark">#0A0E27</Color>
    <Color x:Key="BackgroundMedium">#151829</Color>
    <Color x:Key="BackgroundLight">#1E2139</Color>
    <Color x:Key="CardBackground">#252B43</Color>
    <Color x:Key="CardBackgroundAlt">#1A1F35</Color>

    <!-- Цвета для текста -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#A8B3CF</Color>
    <Color x:Key="TextTertiary">#7B8CDE</Color>
    <Color x:Key="TextMuted">#606A88</Color>

    <!-- Цвета для записи -->
    <Color x:Key="RecordingActive">#FF6B6B</Color>
    <Color x:Key="RecordingInactive">#667EEA</Color>
    <Color x:Key="RecordingGlow">#1976D2</Color>

    <!-- Градиентные остановки -->
    <Color x:Key="GradientStart">#667EEA</Color>
    <Color x:Key="GradientMiddle">#764BA2</Color>
    <Color x:Key="GradientEnd">#F093FB</Color>

    <!-- Кисти -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
    
    <!-- Градиентные кисти -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#667EEA" Offset="0.0" />
        <GradientStop Color="#764BA2" Offset="0.5" />
        <GradientStop Color="#F093FB" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6B6B" Offset="0.0" />
        <GradientStop Color="#EE5A6F" Offset="0.5" />
        <GradientStop Color="#C44569" Offset="1.0" />
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="BackgroundGradient" Center="0.5,0.3" Radius="1.2">
        <GradientStop Color="#1A1F3A" Offset="0.0" />
        <GradientStop Color="#0A0E27" Offset="0.5" />
        <GradientStop Color="#050812" Offset="1.0" />
    </RadialGradientBrush>
</ResourceDictionary>
