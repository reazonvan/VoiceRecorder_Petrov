<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceRecorder_Petrov.PlayerPage"
             Title="Воспроизведение"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="*,Auto,Auto,*" Padding="20">

        <!-- Название записи -->
        <VerticalStackLayout Grid.Row="1" 
                             Spacing="15"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
            
            <Label x:Name="TitleLabel" 
                   Text="Запись" 
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333333"/>
            
            <Label x:Name="DateLabel" 
                   Text="Дата" 
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="#666666"/>
            
            <Label x:Name="DurationLabel" 
                   Text="00:00" 
                   FontSize="48"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#007AFF"
                   Margin="0,20,0,0"/>
            
            <Label x:Name="StatusLabel" 
                   Text="Готово к воспроизведению" 
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#999999"/>
        </VerticalStackLayout>

        <!-- Кнопки управления -->
        <HorizontalStackLayout Grid.Row="2" 
                               Spacing="20"
                               HorizontalOptions="Center"
                               Margin="0,40">
            
            <!-- Play/Pause -->
            <Border WidthRequest="100"
                    HeightRequest="100"
                    BackgroundColor="#007AFF"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="50"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPlayPauseTapped"/>
                </Border.GestureRecognizers>
                
                <Grid>
                    <!-- Иконка Play -->
                    <Label x:Name="PlayIcon"
                           Text="▶"
                           FontSize="40"
                           TextColor="White"
                           IsVisible="True"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="5,0,0,0"/>
                    
                    <!-- Иконка Pause -->
                    <Label x:Name="PauseIcon"
                           Text="❚❚"
                           FontSize="32"
                           TextColor="White"
                           IsVisible="False"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>
        </HorizontalStackLayout>

        <!-- Кнопка закрыть -->
        <Button Grid.Row="3"
                Text="Закрыть"
                FontSize="16"
                BackgroundColor="#FF3B30"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                VerticalOptions="End"
                Margin="0,0,0,20"
                Clicked="OnCloseClicked"/>

    </Grid>

</ContentPage>
