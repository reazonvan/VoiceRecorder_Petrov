<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="VoiceRecorder_Petrov.PlayerPage"
             Title="Плеер"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- Заголовок -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,30">
            <Label x:Name="TitleLabel"
                   Text="Название записи"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333333"/>
            
            <Label x:Name="InfoLabel"
                   Text="Дата и размер"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="#666666"/>
        </VerticalStackLayout>

        <!-- MediaElement - главный элемент для воспроизведения -->
        <!-- Делаем его невидимым, но он работает -->
        <toolkit:MediaElement x:Name="AudioPlayer"
                              Grid.Row="1"
                              ShouldAutoPlay="True"
                              ShouldShowPlaybackControls="False"
                              HeightRequest="0"
                              IsVisible="False"
                              PositionChanged="OnPositionChanged"
                              MediaEnded="OnMediaEnded"/>

        <!-- UI плеера -->
        <VerticalStackLayout Grid.Row="1" 
                             VerticalOptions="Center"
                             Spacing="30">
            
            <!-- Иконка -->
            <Border WidthRequest="100"
                    HeightRequest="100"
                    BackgroundColor="#007AFF"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="50"/>
                </Border.StrokeShape>
                
                <Path Data="M12,3V13.55C11.41,13.21 10.73,13 10,13A4,4 0 0,0 6,17A4,4 0 0,0 10,21A4,4 0 0,0 14,17V7H18V3H12Z"
                      Fill="White"
                      Aspect="Uniform"
                      HeightRequest="40"
                      WidthRequest="40"/>
            </Border>

            <!-- Прогресс бар -->
            <ProgressBar x:Name="ProgressBar"
                         Progress="0"
                         ProgressColor="#007AFF"
                         HeightRequest="6"/>

            <!-- Время воспроизведения -->
            <Grid ColumnDefinitions="*,*">
                <Label x:Name="CurrentTimeLabel"
                       Text="00:00"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Start"/>
                
                <Label x:Name="TotalTimeLabel"
                       Grid.Column="1"
                       Text="00:00"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="End"/>
            </Grid>

            <!-- Слайдер для перемотки -->
            <Slider x:Name="SeekSlider"
                    Minimum="0"
                    Maximum="100"
                    Value="0"
                    MinimumTrackColor="#007AFF"
                    MaximumTrackColor="#DDDDDD"
                    ThumbColor="#007AFF"
                    DragCompleted="OnSeekDragCompleted"/>

        </VerticalStackLayout>

        <!-- Кнопки управления -->
        <HorizontalStackLayout Grid.Row="2"
                               Spacing="15"
                               HorizontalOptions="Center"
                               Margin="0,0,0,30">

            <!-- Назад 10 секунд -->
            <Button Text="⏮ 10"
                    FontSize="16"
                    WidthRequest="70"
                    HeightRequest="60"
                    BackgroundColor="#E8E8E8"
                    TextColor="#333333"
                    CornerRadius="30"
                    Clicked="OnBackwardClicked"/>

            <!-- Пауза/Плей -->
            <Button x:Name="PlayPauseButton"
                    Text="⏸"
                    FontSize="32"
                    WidthRequest="90"
                    HeightRequest="90"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="45"
                    Clicked="OnPlayPauseClicked"/>

            <!-- Вперед 10 секунд -->
            <Button Text="10 ⏭"
                    FontSize="16"
                    WidthRequest="70"
                    HeightRequest="60"
                    BackgroundColor="#E8E8E8"
                    TextColor="#333333"
                    CornerRadius="30"
                    Clicked="OnForwardClicked"/>

        </HorizontalStackLayout>

    </Grid>

</ContentPage>

